<section class='devise'>
	<div class='container group'>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div><%= f.label :email %>
  <%= f.email_field :email, type: "email", :autofocus => true %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password, type: "password" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "checkbox" %></div>
  <% end -%>

  <div><%= f.submit "Log in" %></div>

  <%= link_to "Reset my password", new_password_path(resource_name) %>

<% end %>



</div>
</section>